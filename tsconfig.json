{
  "compilerOptions": {
    "target": "es2021",                                  
    "module": "commonjs",                                
    "allowJs": true,                                  
    "esModuleInterop": true,   
    "resolveJsonModule": false,                          
    "forceConsistentCasingInFileNames": true,                
    "strict": true,                                      
    "skipLibCheck": true,                               
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@implementations/*": ["./src/implementations/*"],
      "@config/*": ["./src/config/*"]
    }
  }
}
