{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2021",  
    "lib": ["esnext"],                                
    "module": "commonjs",                                
    "allowJs": true,                                  
    "esModuleInterop": true,   
    "resolveJsonModule": false,                          
    "forceConsistentCasingInFileNames": true,                
    "strict": true,                                      
    "skipLibCheck": true,                               
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    }
  }
}
